<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Index Kartu Keluarga</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
<div class="container">
    <% if (messages.success) { %>
        <div class="alert alert-info" role="alert">
            <%= messages.success %>
        </div>
    <% } %>
    
    <div class="row">
        <div class="col">
            <a href="/kartu_keluarga/create" class="btn btn-sm btn-success">Tambah KK</a>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">No KK</th>
                        <th scope="col">Alamat</th>
                        <th scope="col">RT</th>
                        <th scope="col">RW</th>
                        <th scope="col">Kode Pos</th>
                        <th scope="col">Desa Kelurahan</th>
                        <th scope="col">Kecamatan</th>
                        <th scope="col">Kabupaten Kota</th>
                        <th scope="col">Provinsi</th>
                        <th colspan="2" scope="col">Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i = 0; i < data.length; i++){ %>
                        <tr>
                            <th scope="row"><%= (i+1) %></th>
                            <td><%= data[i].no_kk %></td>
                            <td><%= data[i].alamat %></td>
                            <td><%= data[i].rt %></td>
                            <td><%= data[i].rw %></td>
                            <td><%= data[i].kode_pos %></td>
                            <td><%= data[i].desa_kelurahan %></td>
                            <td><%= data[i].kecamatan %></td>
                            <td><%= data[i].kabupaten_kota %></td>
                            <td><%= data[i].provinsi %></td>
                            <td>
                                <a href="/kartu_keluarga/edit/<%= data[i].no_kk %>" class="btn btn-sm btn-warning">Edit</a>
                                <a href="/kartu_keluarga/delete/<%= data[i].no_kk %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>